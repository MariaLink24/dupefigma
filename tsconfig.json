{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "lib": ["es2016", "es2017", "dom"],
    "jsx": "react",
    "allowJs": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "moduleResolution": "node",
  },
  "include": ["src"]
}
